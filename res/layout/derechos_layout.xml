            android:text="@string/titulo_derechos"
            android:textColor="#FF3300"
            android:textSize="25sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/derecho1"
            android:textColor="#006699"
            android:textSize="15sp" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/derecho2"
            android:textColor="#006699"
            android:textSize="15sp" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/derecho3"
            android:textColor="#006699"
            android:textSize="15sp" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/derecho4"
            android:textColor="#006699"
            android:textSize="15sp" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/derecho5"
            android:textColor="#006699"
            android:textSize="15sp" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/derecho6"
            android:textColor="#006699"
            android:textSize="15sp" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/derecho7"
            android:textColor="#006699"
            android:textSize="15sp" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/derecho8"
            android:textColor="#006699"
            android:textSize="15sp" />
    </LinearLayout>
</ScrollView>
</LinearLayout>